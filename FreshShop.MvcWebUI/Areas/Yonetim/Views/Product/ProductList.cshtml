@using FreshShop.Model.Domain
@using FreshShop.MvcWebUI.Models
@using FreshShop.Model.Enums
@model List<Product>


@{
    ViewBag.Title = "ProductList";
    Layout = "~/Areas/Yonetim/Views/Shared/_Layout.cshtml";

}


<table id="tblProducts" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Fotoğraf</th>
            <th>Ürününün Kategorisi</th>
            <th>Ürünün Adı</th>
            <th>Ürünün Fiyatı</th>
            <th>Ürünün İndirim Oranı</th>

            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (Product item in Model)
        {
            foreach (var photo in item.ProductPhotoes)
            {
                <tr>
                    <td>
                        <img src="~/Areas/Yonetim/Content/img/ProductImages/@photo.Photo" style="width:80px;" />
                    </td>
                    <td>@item.Category.CategoryName</td>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.Discount</td>
                    
                    
                    <td>
                        <a href="@Url.Action("ProductUpdate","Product",new {id=item.Id})" prdctId="@item.Id" class="btn btn-warning btnpDüzenle" >Düzenle </a>
                    </td>
                    <td>
                        <button prdctId="@item.Id" type="button" class="btn btn-danger btnpSil" style="width:auto;">Sil </button>
                    </td>
                </tr>
            }

        }



    </tbody>

</table>



@section styles{
    <link rel="stylesheet" href="~/Areas/Yonetim/Content/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Areas/Yonetim/Content/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Areas/Yonetim/Content/plugins/sweetalert2/sweetalert2.min.css"  />
}

@section scripts{
    <script src="~/Areas/Yonetim/Content/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Yonetim/Content/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Areas/Yonetim/Content/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Areas/Yonetim/Content/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Areas/Yonetim/Content/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/Areas/Yonetim/Scripts/Product/ProductList.js"></script>
    
}


