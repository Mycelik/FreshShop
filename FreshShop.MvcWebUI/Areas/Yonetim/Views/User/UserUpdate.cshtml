@using FreshShop.Model.ComplexTypes.Yonetim.User
@{
    ViewBag.Title = "UserUpdate";
    Layout = "~/Areas/Yonetim/Views/Shared/_Layout.cshtml";

    
}
@model FreshShop.Model.Domain.User


<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Yönetici Güncelleme Ekranı</h3>
            </div>
            <form id="frmUpdateUser" role="form">
                <div class="card-body">
                    <input type="hidden" id=txtUserId value="@Model.Id" />
                    <div class="form-group">
                        <label>Yöneticini Rolü</label>
                       <br />
                        @if (Model.RoleId == 1)
                        {
                            <button id="yetkiAta" data-id="@Model.Id" type="button" class="btn btn-primary " style="width:auto;">ADMİN</button>
                        }
                        else if (Model.RoleId == 2)
                        {
                            <button id="yetkiAta" data-id="@Model.Id" type="button" class="btn btn-info" style="width:auto;">SubAdmin</button>
                        }
                        else if (Model.RoleId == 3)
                        {
                            <button id="yetkiAta" data-id="@Model.Id" type="button" class="btn btn-info" style="width:auto;">CategoryAdmin</button>
                        }
                        else
                        {
                            <button type="button" id="yetkiAta" data-id="@Model.Id" class="btn btn-info " style="width:auto;">ProductAdmin</button>
                        }
                    </div>

                    <div class="form-group">
                        <label>Yöneticinin Adı-Soyadı</label>
                        <input type="text" value="@Model.FullName" class="form-control" id="txtFullName" placeholder="Ad-Soyad Giriniz.">
                    </div>
                    <div class="form-group">
                        <label>Yöneticinin E-Mail Adresi</label>
                        <input type="text" value="@Model.Email" class="form-control" id="txtEmail" placeholder="E-Mail Adresi Giriniz.">
                    </div>

                    <div class="form-group">
                        <label>Parola</label>
                        <input type="password" class="form-control" id="txtPassword" placeholder="Parola Giriniz.">
                    </div>
                    <div class="form-group">
                        <label>Parola(Tekrar)</label>
                        <input type="password" class="form-control" id="txtRePassword" placeholder="Parola(Tekrar) Giriniz.">
                    </div>


                </div>
                <div class="card-footer">
                    <input id="btnUserUpdate" type="button" class="btn btn-primary btnpDüzenle" value="Güncelleştir" />
                </div>
            </form>
        </div>
    </div>
</div>

@section styles{

    <link href="~/Areas/Yonetim/Content/plugins/summernote/summernote-bs4.min.css" rel="stylesheet" />
    <link href="~/Areas/Yonetim/Content/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Areas/Yonetim/Content/plugins/summernote/summernote-bs4.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Areas/Yonetim/Content/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/Areas/Yonetim/Scripts/User/UserUpdate.js"></script>
}

