@using FreshShop.Model.Domain
@using FreshShop.MvcWebUI.Models
@using FreshShop.Model.Enums
@model List<User>

@{
    ViewBag.Title = "UserList";
    Layout = "~/Areas/Yonetim/Views/Shared/_Layout.cshtml";
    User activeUser = SessionManager.ActiveUser;
}

<table id="tblUsers" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Fotoğraf</th>
            <th>Tarih</th>
            <th>Email</th>
            <th>Ad Soyad</th>
            <th>Düzenle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (User item in Model)
        {
        <tr>
            <td>
                <img src="~/Areas/Yonetim/Content/img/UserImages/@item.Photo" style="width:80px;" />
            </td>
            <td>@item.Created.Value.ToShortDateString()</td>
            <td>@item.Email</td>
            <td>@item.FullName</td>
            <td>
                <a href="@Url.Action("UserUpdate","User",new {id=item.Id})" userId="@item.Id" class="btn btn-warning btnUserDuzenle">Düzenle </a>
            </td>
            <td>
                <button userId="@item.Id" type="button" class="btn btn-danger btnUserSil" style="width:auto;">Sil </button>
            </td>
        </tr>
        }



    </tbody>

</table>


@section styles{
    <link rel="stylesheet" href="~/Areas/Yonetim/Content/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Areas/Yonetim/Content/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
}

@section scripts{
    <script src="~/Areas/Yonetim/Content/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Yonetim/Content/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Areas/Yonetim/Content/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Areas/Yonetim/Content/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Areas/Yonetim/Scripts/User/UserUpdate.js"></script>
    <script src="~/Areas/Yonetim/Scripts/User/UserList.js"></script>
}