@using FreshShop.Model.Domain
@using FreshShop.MvcWebUI.Models
@using FreshShop.Model.Enums
@{ 
    User activeUser = SessionManager.ActiveUser;
}



<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="index3.html" class="brand-link">
        <img src="~/Areas/Yonetim/Content/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">AdminLTE 3</span>
    </a>

    <div class="sidebar">
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="@("/Areas/Yonetim/Content/img/UserImages/"+activeUser.Photo)" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@activeUser.FullName</a>
            </div>
        </div>

        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item has-treeview menu-open">

                    @if (activeUser.Role.RoleName == RoleNames.Admin.ToString())
                    {
                        <a href="#" class="nav-link active">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                Yönetici Menüsü
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="/Yonetim/User/UserList" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Yöneticiler</p>
                                </a>
                            </li>
                        </ul>
                    }
                    @if (activeUser.Role.Id == (int)RoleNames.Admin)
                    {
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="/Yonetim/User/New" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Yeni Yönetici Ekleme</p>
                                </a>
                            </li>
                        </ul>

                    }

                    <a href="#" class="nav-link active">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            Ürün Kontrol Menüsü
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="/Yonetim/Product/ProductList" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Ürünler</p>
                            </a>
                        </li>
                    </ul>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="/Yonetim/Product/New" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Yeni Ürün Ekleme</p>
                            </a>
                        </li>
                    </ul>



                </li>
                <li class="nav-item">
                    <a href="/Yonetim/User/LogOut" class="nav-link">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            ÇIKIŞ
                        </p>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</aside>
